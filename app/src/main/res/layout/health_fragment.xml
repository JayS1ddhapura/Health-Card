<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Healthhistory">

    <Button
        android:id="@+id/medicineButton"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:background="@drawable/maindraw"
        android:text="medicine"
        android:textColor="#238c9e"
        app:layout_constraintBottom_toBottomOf="@+id/labReportButton"
        app:layout_constraintEnd_toStartOf="@+id/labReportButton"
        app:layout_constraintStart_toEndOf="@+id/caseButton"
        app:layout_constraintTop_toTopOf="@+id/caseButton" />

    <Button
        android:id="@+id/caseButton"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/drawmed"
        android:text="case"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/labReportButton"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:background="@drawable/maindraw"
        android:text="lab report"
        android:textColor="#238c9e"
        app:layout_constraintBottom_toBottomOf="@+id/caseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/caseButton"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/caseListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labReportButton"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>