<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".casesDisplay">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            android:text="\nCID:\n\n\nDID:\n\n\nHID:\n\n\nDate and Time:\n\n\nProblem Description:\n\n\nEvaluatoin and Cure:\n\n\nInstrucions:\n\n\nPrescribed Medicines:\n\n\nOPD Reminder:\n\n\nViral Disease:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_gravity="fill"
            android:text=""
            app:layout_column="1"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>