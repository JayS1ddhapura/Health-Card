<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicineDisplay">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="\nMBID:\n\n\nMID:\n\n\nDate and Time:\n\n\nPrescribed By:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_gravity="fill"/>

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_gravity="fill"/>
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="464dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/medicineNameHeadingTextView"
            android:layout_width="137.66dp"
            android:layout_height="wrap_content"
            android:text="Medicine:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0" />

        <TextView
            android:id="@+id/dosageHeadingTextView"
            android:layout_width="137.66dp"
            android:layout_height="wrap_content"
            android:text="Dosage:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0" />

        <TextView
            android:id="@+id/extraHeadingTextView"
            android:layout_width="137.66dp"
            android:layout_height="wrap_content"
            android:text="Extra:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0" />

        <TextView
            android:id="@+id/medicineNameTextView"
            android:layout_width="137.66dp"
            android:layout_height="wrap_content"
            android:text="blah blah blah"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <TextView
            android:id="@+id/dosageTextView"
            android:layout_width="137.66dp"
            android:layout_height="wrap_content"
            android:text="1-1-1"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <TextView
            android:id="@+id/extraTextView"
            android:layout_width="137.66dp"
            android:layout_height="wrap_content"
            android:text="before having\n meal"
            android:textSize="16sp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>